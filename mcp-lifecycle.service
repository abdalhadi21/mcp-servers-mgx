[Unit]
Description=MCP Container Lifecycle Manager
After=docker.service
Requires=docker.service

[Service]
Type=simple
ExecStart=/bin/bash -c 'while true; do /path/to/container-lifecycle-manager.sh monitor; sleep 60; done'
Restart=always
RestartSec=10
User=root
StandardOutput=journal
StandardError=journal

# Environment
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

[Install]
WantedBy=multi-user.target